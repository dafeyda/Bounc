# Auto-detect text files and normalize line endings
* text=auto

# Unity binary files — never touch line endings
*.unity binary
*.prefab binary
*.asset binary
*.fbx binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.tga binary
*.psd binary
*.wav binary
*.mp3 binary
*.ogg binary
*.dll binary
*.exe binary

# Text files — always LF in repo
*.meta text eol=lf
*.cs text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.asmdef text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf
